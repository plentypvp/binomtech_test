<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_gravity="right|center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/btnZoomIn"
            android:elevation="5dp"
            android:background="@drawable/circle"
            android:src="@drawable/zoom_in"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/btnZoomOut"
            android:elevation="5dp"
            android:background="@drawable/circle"
            android:src="@drawable/zoom_out"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/btnMoveToMe"
            android:elevation="5dp"
            android:background="@drawable/circle"
            android:src="@drawable/move_to_me"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/btnMoveToMarker"
            android:elevation="5dp"
            android:background="@drawable/circle"
            android:src="@drawable/move_to_marker"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInfoBlock"
        android:background="#ffffff"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="165dp">
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivInfoImage"
                android:src="#000000"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvInfoName"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Илья"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="#0040ff"
                        android:src="@drawable/network"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tvInfoNetwork"
                        android:text="Илья"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="24dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:tint="#0040ff"
                        android:src="@drawable/calendar"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tvInfoDate"
                        android:text="Илья"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="24dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:tint="#0040ff"
                        android:src="@drawable/clock"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tvInfoTime"
                        android:text="Илья"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:padding="16dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button_bg"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="@string/view_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>
</FrameLayout>